@model Data.Entidades.Producto
@{
    ViewBag.Title = "Crear";
}

<h2>Crear</h2>

@using (Html.BeginForm())
{
<div>
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(p => p.Descripcion)           
        </div>
        <div class="col-md-4">
            @Html.EditorFor(p => p.Descripcion, null, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div><br />
    <div class="row">
        <div class="col-md-2"> 
            @Html.LabelFor(p => p.CategoriaId)          
        </div>
        <div class="col-md-4">
            @Html.DropDownList("CategoriaId", ViewBag.Categoria as SelectList, new {@class="form-control" })
        </div>
    </div><br />
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(p => p.Cantidad)           
        </div>
        <div class="col-md-4">
            @Html.EditorFor(p => p.Cantidad, null, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div><br />
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(p => p.PorcentajeGanancia)          
        </div>
        <div class="col-md-4">
            @Html.EditorFor(p => p.PorcentajeGanancia, null, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div><br />
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(p => p.Disponible)          
        </div>
        <div class="col-md-4">
            @Html.EditorFor(p => p.Disponible)
        </div>
    </div>
    <br />
    <input type="submit" name="name" value="Crear" class="btn btn-success" />
</div>
   
}
<br />
@Html.ActionLink("Regresar sin guardar","Index")